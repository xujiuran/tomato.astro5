---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from "astro:content";
const pageTitle = "标签索引";
const activeNavigate = "/tags/";
const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

console.log(tags);

---
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>
<BaseLayout pageTitle={pageTitle} activeNavigate={activeNavigate}>
  <div>
    {tags.map((tag) => <p>
      <a href={`/tomato.astro5/tags/${tag}`}>{tag}</a>
    </p>)}
  </div>
</BaseLayout>